
{% liquid
  assign block_settings = block.settings
  assign collection = closest.collection
%}

{% capture breadcrumb_html %}
  <ul class="list-unstyle list-breadcrumb">
    <li><a href="{{ routes.root_url }}">Home</a></li>
    {% if collection != blank %}
      <li>{{ collection.title }}</li>
    {% else %}
      <li>Collection</li>
    {% endif %}
  </ul>
{% endcapture %}

{% render 'text', fallback_text: breadcrumb_html, block: block %}

{% stylesheet %}
  .list-breadcrumb {
    padding-inline-start: 0 !important;
  }

  .list-breadcrumb li {
    display: inline-block;
    margin-right: var(--margin-2xs);
  }

  .list-breadcrumb li:last-child {
    margin-right: 0;
  }

  .list-breadcrumb li:before {
    content: "â€º";
    display: inline-block;
    color: inherit;
    font-size: 0.9em;
    margin-right: var(--margin-2xs);
  }

  .list-breadcrumb li:first-child:before {
    content: none;
  }

  .list-breadcrumb li a {
    text-decoration: none;
  }
{% endstylesheet %}

