<div class="three-buttons three-buttons--{{ block.id }}" {{ block.shopify_attributes }}>
  {%- comment -%} Button 1 {%- endcomment -%}
  {%- if block.settings.button_1_label != blank -%}
    <div class="three-buttons__button">
      <a
        {% if block.settings.button_1_link == blank %}
          role="link"
          aria-disabled="true"
        {% else %}
          href="{{ block.settings.button_1_link }}"
        {% endif %}
        class="{{ block.settings.button_1_style }} {{ block.settings.button_1_style }}--{{ block.id }}-1"
        {%- if block.settings.button_1_open_in_new_tab -%}
          target="_blank"
          rel="noopener noreferrer"
        {%- endif -%}
      >
        {{ block.settings.button_1_label }}
      </a>
    </div>
  {%- endif -%}

  {%- comment -%} Button 2 {%- endcomment -%}
  {%- if block.settings.button_2_label != blank -%}
