        {%- if block.settings.button_2_open_in_new_tab -%}
          target="_blank"
          rel="noopener noreferrer"
        {%- endif -%}
      >
        {{ block.settings.button_2_label }}
      </a>
    </div>
  {%- endif -%}

  {%- comment -%} Button 3 {%- endcomment -%}
  {%- if block.settings.button_3_label != blank -%}
    <div class="three-buttons__button">
      <a
        {% if block.settings.button_3_link == blank %}
          role="link"
          aria-disabled="true"
        {% else %}
          href="{{ block.settings.button_3_link }}"
        {% endif %}
        class="{{ block.settings.button_3_style }} {{ block.settings.button_3_style }}--{{ block.id }}-3"
        {%- if block.settings.button_3_open_in_new_tab -%}
          target="_blank"
          rel="noopener noreferrer"
        {%- endif -%}
      >
        {{ block.settings.button_3_label }}
      </a>
    </div>
  {%- endif -%}
</div>

{% style %}
  .three-buttons--{{ block.id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1rem;
    align-items: center;
    justify-content: center;
  }

  @media only screen and (max-width: 768px) {
    .three-buttons--{{ block.id }} {
      grid-template-columns: 1fr;
      gap: 0.75rem;
    }
  }

  .three-buttons--{{ block.id }} .three-buttons__button {
    display: flex;
    justify-content: center;
  }
{% endstyle %}

