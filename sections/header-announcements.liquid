

{% liquid
  assign display_mode = section.settings.display_mode | default: 'carousel'
  assign needs_script = false
  if display_mode == 'carousel' and section.blocks.size > 1
    assign needs_script = true
  endif
%}
{% if needs_script %}
  <script
    src="{{ 'announcement-bar.js' | asset_url }}"
    type="module"
    fetchpriority="low"
  ></script>
{% endif %}

<div class="section-background color-{{ section.settings.color_scheme }}"></div>
<aside
  class="announcement-bar spacing-style section section--{{ section.settings.section_width }} color-{{ section.settings.color_scheme }}"
  style="{% render 'spacing-padding', settings: section.settings %}; --border-bottom-width: {{ section.settings.divider_width }}px;"
>
  {% liquid
    assign display_mode = section.settings.display_mode | default: 'carousel'
    assign autoplay = false
    assign show_arrows = false
    assign is_columns_mode = false
    
    if display_mode == 'columns'
      assign is_columns_mode = true
    elsif section.blocks.size > 1
      assign autoplay = true
      assign show_arrows = true
    endif
    
    # Determine number of columns to show (max 3)
    assign block_count = section.blocks.size
    if block_count > 3
      assign column_count = 3
    else
      assign column_count = block_count
    endif
  %}

  <announcement-bar-component
    class="announcement-bar__slider{% if is_columns_mode %} announcement-bar__slider--columns{% endif %}"
    data-display-mode="{{ display_mode }}"
    data-column-count="{{ column_count }}"
    style="{% if is_columns_mode %}--column-count: {{ column_count }};{% endif %}"
    {% if autoplay == true and is_columns_mode == false %}
      autoplay="{{ section.settings.speed }}" aria-live="polite"
    {% endif %}
  >
    {% if show_arrows and is_columns_mode == false %}
      {% render 'slideshow-arrows', icon_style: 'chevron' %}
    {% endif %}

    <div class="announcement-bar__slides{% if is_columns_mode %} announcement-bar__slides--columns{% endif %}">
      {% content_for 'blocks' %}
    </div>
  </announcement-bar-component>
</aside>

{% stylesheet %}
  .announcement-bar {
    border-block-end: var(--border-bottom-width) solid var(--color-border);
  }

  .announcement-bar__slider {
    display: flex;
    flex-direction: row;
    align-items: center;
    position: relative;

    @media screen and (max-width: 749px) {
      grid-column: 1 / -1;
    }
  }

  .announcement-bar__slides {
    display: grid;
    grid: [stack] auto / [stack] auto;
    width: calc(100% - var(--button-size) * 2);
    max-width: 680px;
    margin-inline: auto;
  }

  .announcement-bar__slides > * {
    grid-area: stack;
  }

  .announcement-bar__slide {
    transition: opacity 0.5s ease-in-out, visibility 0.5s ease-in-out;

    &[aria-hidden='true'] {
      opacity: 0;
      visibility: hidden;
    }
  }

  /* Columns mode styles */
  .announcement-bar__slider--columns {
    width: 100%;
  }

  .announcement-bar__slider--columns .announcement-bar__slides {
    width: 100%;
    max-width: 100%;
    display: grid;
    grid-template-columns: repeat(var(--column-count, 1), 1fr);
    gap: var(--padding-md);
    grid-area: unset;
  }

  .announcement-bar__slider--columns .announcement-bar__slides > * {
    grid-area: unset;
  }

  .announcement-bar__slider--columns .announcement-bar__slide {
    opacity: 1;
    visibility: visible;
    width: 100%;
    transition: none;
  }

  .announcement-bar__slider--columns .announcement-bar__slide[aria-hidden='true'] {
    opacity: 1;
    visibility: visible;
  }

  /* Responsive: stack columns on mobile */
  @media screen and (max-width: 749px) {
    .announcement-bar__slider--columns .announcement-bar__slides {
      grid-template-columns: 1fr;
    }
  }

  .announcement-bar__slider slideshow-arrows {
    padding: 0;
    mix-blend-mode: normal;
  }

  .announcement-bar__slider slideshow-arrows .slideshow-control {
    color: var(--color-foreground);
  }

  .announcement-bar__slider .slideshow-control {
    display: flex;
    padding: 0;
    width: var(--button-size);
    height: var(--button-size);
    align-items: center;
    justify-content: center;
    opacity: 1;
    animation: none;

    @media screen and (min-width: 750px) {
      --slideshow-control-offset: calc((var(--button-size) - var(--icon-size-xs)) / 2);

      .section--page-width &.slideshow-control--previous {
        transform: translateX(var(--slideshow-control-offset));
      }
    }
  }

  .announcement-bar__slider .slideshow-control .svg-wrapper {
    width: var(--icon-size-xs);
    height: var(--icon-size-xs);
  }

  .announcement-bar__slide {
    place-content: center;
  }

  .announcement-bar__text:first-child {
    margin: 0;
  }

  .announcement-bar__link {
    position: absolute;
    inset: 0;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:names.announcement_bar",
  "blocks": [
    {
      "type": "_announcement"
    }
  ],
  "enabled_on": {
    "groups": ["header"]
  },
  "settings": [
    {
      "type": "select",
      "id": "display_mode",
      "label": "Display mode",
      "options": [
        {
          "value": "carousel",
          "label": "Carousel"
        },
        {
          "value": "columns",
          "label": "Columns"
        }
      ],
      "default": "carousel",
      "info": "Carousel: slides through announcements one at a time. Columns: shows up to 3 announcements side by side."
    },
    {
      "type": "range",
      "id": "speed",
      "label": "t:settings.scroll_speed",
      "min": 2,
      "max": 10,
      "default": 5,
      "unit": "sec",
      "visible_if": "{{ section.settings.display_mode == 'carousel' }}"
    },
    {
      "type": "header",
      "content": "t:content.appearance"
    },
    {
      "type": "select",
      "id": "section_width",
      "label": "t:settings.section_width",
      "options": [
        {
          "value": "page-width",
          "label": "t:options.page"
        },
        {
          "value": "full-width",
          "label": "t:options.full"
        }
      ],
      "default": "page-width"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "default": "scheme-4",
      "label": "t:settings.color_scheme"
    },
    {
      "type": "range",
      "id": "divider_width",
      "label": "t:settings.divider_thickness",
      "min": 0,
      "max": 5,
      "step": 0.5,
      "unit": "px",
      "default": 0
    },
    {
      "type": "header",
      "content": "t:content.padding"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "t:settings.top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 15
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "t:settings.bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 15
    }
  ],
  "presets": [
    {
      "name": "t:names.announcement_bar",
      "blocks": {
        "announcement_1": {
          "type": "_announcement"
        }
      },
      "block_order": ["announcement_1"]
    }
  ]
}
{% endschema %}
